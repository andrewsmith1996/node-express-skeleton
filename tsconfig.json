{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist"
    },
    "lib": ["es2015"],
    "include": [
        "src/**/*"
    ]
  }
